<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>New Site</h2>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
          <%= form_for @site, html: {class: "form-horizontal"} do |f| %>

          <div class="form-group">
            <%= f.label :name, 'Название',class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="hr-line-dashed"></div>

          <div class="form-group">
            <%= f.label :tag_list, "Тэги",class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.autocomplete_field :tag_list, autocomplete_tag_name_sites_path, 'data-delimiter' => ',', :multiple => true, class: 'form-control' %>
            </div>
          </div>
            <%= f.submit %>

        <% end %>
      </div>
    </div>
  </div>
</div>
