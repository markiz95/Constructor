<!DOCTYPE html>
<html ng-app="pageBuilder">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebConstructor</title>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <base href="/">
  </head>

  <body >

      <!-- Wrapper-->
      <div id="wrapper">

          <!-- Navigation -->
          <%=  render 'layouts/navigation' %>

          <!-- Page wraper -->
          <div id="page-wrapper" class="gray-bg">

              <!-- Page wrapper -->
              <div ng-include="'_topnavbar.html'"></div>

              <!-- Main view  -->
              <ui-view></ui-view>

              <!-- Footer -->
            <div ng-include="'_footer.html'"></div>

          </div>
          <!-- End page wrapper-->

      </div>
      <!-- End wrapper-->

  </body>
</html>
